@model MoneyandDonation
@await Html.PartialAsync("_AdminNavbar")

<div class="d-flex justify-content-center mb-5">
    <div class="card" style="
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                    overflow: hidden;
                    text-align: center;
                    position: relative;
                    height:400px;
                    width:1600px;
                    background: url(https://d1umd1ua9snads.cloudfront.net/images/articles/_bannerWebp/72396/bigstock-Man-Holding-Money-Jar-With-Don-431800991.webp);
                    background-repeat: no-repeat;
                    background-size: contain;
                    background-size: cover;
                    background-position: center">
        <div class="d-flex justify-content-end m-5 p-2" style="background-color:red;color:white">
            <h2>Total Amount Donated : @Model.AllMoney.Sum(c => c.Amount) </h2>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center">
    <div class="card" style="
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                    overflow: hidden;
                    text-align: center;
                    position: relative;
                    height:400px;
                    width:1600px;
                    background: url(https://sharemeds.in/wp-content/uploads/2020/07/cropped-13843-1024x684-1.jpg);
                    background-repeat: no-repeat;
                    background-size: contain;
                    background-size: cover;
                    background-position: center">
        <div class="d-flex justify-content-end m-5 p-2" style="background-color:red;color:white">
            <h2>Total number of medical donations : @Model.Alldonations.Where(u => u.Category.ToString() == "Medication").Count()</h2>
        </div>
    </div>
</div>
<div class="container">
    <div class="row d-flex justify-content-between p-3">
        @foreach (Donation donation in Model.Alldonations)
        {
            @if (@donation.Category.ToString() == "Medication")
            {
                <div class="card border-white rounded col-sm-6 col-lg-3 col-md-3" style="width: 15rem;">
                    <img class="card-img-top mt-2" style="
                            border-radius: 10px;
                            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                            overflow: hidden;
                            overflow: hidden;
                            text-align: center;
                            position: relative;
                            height:200px;
                            width:250px;
                            background-repeat: no-repeat;
                            background-size: cover;
                            background-position: center" src="@donation.Picture" alt="@donation.Title">
                    <div class="card-body d-flex justify-content-between">
                        <div class="d-flex flex-column">
                            <a href="donations/@donation.DonationId" class="card-title h5 text-info">@donation.Title</a>
                            <p class="card-text">By : <span class="text-muted">@donation.Donner.FirstName @donation.Donner.LastName</span></p>
                            <p class="card-text">quantity : <span class="text-muted">@donation.Quantity</span></p>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>
